void printmapainicial(){
	int i,j;
	for (i=0;i<17;i++){
		printf("\t");
		for (j=0;j<74;j++){
			printf("%c", mapa[i][j]);
		}
		printf("\n");
	}
}				

void printmapa(){
	int i,j;
;
	system("cls");
	tropasmapa();
	printf("\tJogador A: %s\t X \t Jogador B: %s\n",nome_jogador1, nome_jogador2);		      
	for (i=0;i<17;i++){
		printf("\t");
		for (j=0;j<74;j++){
			printf("%c", mapa[i][j]);
		}
		printf("\n");
	}
}

