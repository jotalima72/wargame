void sorteio_paises(char j1[], char j2[]){
	int x,i=0;
	int y,p1=0,p2=0;
	char jogo[21] = {"abcdefghijklmnopqrst"};
		
	for(i=0;i<20;i++){		
	y=rand()%2;
		
	if(y==0){
		j1[p1]=jogo[i];
		p1++;

	}
	if(y==1){
		j2[p2]=jogo[i];
		p2++;
	}	
	if(p1>=10){
		for(i; i<20;i++){
		
		j2[p2]=jogo[i];
		p2++;
		}	
	}
	if(p2>=10){
		for(i; i<20;i++){
		
		j1[p1]=jogo[i];
		p1++;
		}	
	}		
}	
	
}

void jogador_nome(){
	int y, i=0;
	
	printf("Jogador 1 digite seu nome de guerra: ");
	scanf(" %[^\n]s", &nome_jogador1);
	
	printf("Jogador 2 digite seu nome de guerra: ");
	scanf(" %[^\n]s", &nome_jogador2);

}

void sorteio_dados( int atk[], int dsf[]){
	int x,y, aux;

	for(x=0;x<3;x++){
		atk[x] = 1+rand()%6;
	}

	for(x=0;x<3;x++){
		dsf[x] = 1+rand()%6;
	}
	printf("ataque\tdefesa\n");
	for(x=0;x<3;x++){
		for(y=0;y<3;y++){
			if(y>x){
				if(atk[x]<atk[y]){
					aux = atk[x];
					atk[x] = atk[y];
					atk[y] = aux;
				}
				if(dsf[x]<dsf[y]){
					aux = dsf[x];
					dsf[x] = dsf[y];
					dsf[y] = aux;
				}
			}
		}
	}
	for(x=0;x<3;x++){
		printf("%d\t%d\n",atk[x],dsf[x]);
		}	
}

void tropasmapa(){
	mapa[2][6] = (char)((int)mapa[2][6] + tropastotais[0]);
	while(mapa[2][6]>= ':'|| mapa[2][6]<='/'){
		mapa[2][6] = (char)((int)mapa[2][6] - 10);
		mapa[2][5] = (char)((int)mapa[2][5] + 1);
	}
	while(mapa[2][5]>=':'|| mapa[2][5]<='/'){
		mapa[2][5] = (char)((int)mapa[2][5] - 10);
		mapa[2][4] = (char)((int)mapa[2][4] + 1);
	}	
	mapa[5][4] = (char)((int)mapa[5][4] + tropastotais[1]);
	while(mapa[5][4]>=':'|| mapa[5][4]<='/'){
		mapa[5][4] = (char)((int)mapa[5][4] - 10);
		mapa[5][3] = (char)((int)mapa[5][3] + 1);
	}
	while(mapa[5][3]>=':'|| mapa[5][3]<='/'){
		mapa[5][3] = (char)((int)mapa[5][3] - 10);
		mapa[5][2] = (char)((int)mapa[5][2] + 1);
	}
	mapa[5][10] = (char)((int)mapa[5][10] + tropastotais[2]);
	while(mapa[5][10]>=':'|| mapa[5][10]<='/'){
		mapa[5][10] = (char)((int)mapa[5][10] - 10);
		mapa[5][9] = (char)((int)mapa[5][9] + 1);
	}
	while(mapa[5][9]>=':'|| mapa[5][9]<='/'){
		mapa[5][9] = (char)((int)mapa[5][9] - 10);
		mapa[5][8] = (char)((int)mapa[5][8] + 1);
	}
	mapa[8][7] = (char)((int)mapa[8][7] + tropastotais[3]);
	while(mapa[8][7]>=':'|| mapa[8][7]<='/'){
		mapa[8][7] = (char)((int)mapa[8][7] - 10);
		mapa[8][6] = (char)((int)mapa[8][6] + 1);
	}
	while(mapa[8][6]>=':'|| mapa[8][6]<='/'){
		mapa[8][6] = (char)((int)mapa[8][6] - 10);
		mapa[8][5] = (char)((int)mapa[8][5] + 1);
	}
	mapa[11][10] = (char)((int)mapa[11][10] + tropastotais[4]);
	while(mapa[11][10]>=':'|| mapa[11][10]<='/'){
		mapa[11][10] = (char)((int)mapa[11][10] - 10);
		mapa[11][9] = (char)((int)mapa[11][9] + 1);
