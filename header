	while(mapa[13][30]>=':'|| mapa[13][30]<='/'){
		mapa[13][30] = (char)((int)mapa[13][30] - 10);
		mapa[13][29] = (char)((int)mapa[13][29] + 1);
	}
	while(mapa[13][29]>=':'|| mapa[13][29]<='/'){
		mapa[13][29] = (char)((int)mapa[13][29] - 10);
		mapa[13][28] = (char)((int)mapa[13][28] + 1);
	}
