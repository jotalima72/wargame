	}
	mapa[3][29] = (char)((int)mapa[3][29] + tropastotais[5]);
	while(mapa[3][29]>=':'|| mapa[3][29]<='/'){
		mapa[3][29] = (char)((int)mapa[3][29] - 10);
		mapa[3][28] = (char)((int)mapa[3][28] + 1);
	}
	while(mapa[3][28]>=':'|| mapa[3][28]<='/'){
		mapa[3][28] = (char)((int)mapa[3][28] - 10);
		mapa[3][27] = (char)((int)mapa[3][27] + 1);
	}	
	mapa[3][39] = (char)((int)mapa[3][39] + tropastotais[6]);
	while(mapa[3][39]>=':'|| mapa[3][39]<='/'){
		mapa[3][39] = (char)((int)mapa[3][39] - 10);
		mapa[3][38] = (char)((int)mapa[3][38] + 1);
	}
	while(mapa[3][39]>=':'|| mapa[3][39]<='/'){
		mapa[3][38] = (char)((int)mapa[3][38] - 10);
		mapa[3][37] = (char)((int)mapa[3][37] + 1);
	}
	mapa[5][34] = (char)((int)mapa[5][34] + tropastotais[7]);
	while(mapa[5][34]>=':'|| mapa[5][34]<='/'){
		mapa[5][34] = (char)((int)mapa[5][34] - 10);
		mapa[5][33] = (char)((int)mapa[5][33] + 1);
	}
	while(mapa[5][33]>=':'|| mapa[5][33]<='/'){
		mapa[5][33] = (char)((int)mapa[5][33] - 10);
		mapa[5][32] = (char)((int)mapa[5][32] + 1);
	}
